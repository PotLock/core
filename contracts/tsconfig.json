{
    "compilerOptions": {
      "target": "ES2020",                
      "module": "commonjs",                    
      "strict": true,                          
      "esModuleInterop": true,                   
      "skipLibCheck": true,                    
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",                      
      "moduleResolution": "node",              
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./test"],               
      "types": ["node", "mocha", "types"],                        
      "lib": ["ES2020"],                        
      "sourceMap": true                        
    },
    "include": [
      "**/*.ts", "test/**/contract.test.ts"                           
    ],
    "exclude": [
      "node_modules"
    ]
  }
  